{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Snowflake Specific Schema",
    "type": "object",
    "properties": {
        "type": {
            "const": "snowflake"
        },
        "account": {
            "type": "string"
        },
        "user": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "role": {
            "type": "string"
        },
        "database": {
            "type": "string"
        },
        "warehouse": {
            "type": "string"
        },
        "schema": {
            "type": "string"
        },
        "threads": {
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "account",
        "database",
        "password",
        "role",
        "schema",
        "threads",
        "type",
        "user",
        "warehouse"
    ],
    "additionalProperties": false
}