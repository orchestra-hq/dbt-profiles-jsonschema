{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Athena Connection Schema",
    "type": "object",
    "properties": {
        "type": {
            "const": "athena"
        },
        "schema": {
            "type": "string"
        },
        "s3_staging_dir": {
            "type": "string"
        },
        "s3_data_dir": {
            "type": "string"
        },
        "s3_data_naming": {
            "type": "string"
        },
        "region_name": {
            "type": "string"
        },
        "database": {
            "type": "string"
        },
        "aws_profile_name": {
            "type": "string"
        },
        "num_retries": {
            "type": "integer",
            "minimum": 0
        },
        "threads": {
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "database",
        "region_name",
        "s3_data_dir",
        "s3_data_naming",
        "s3_staging_dir",
        "schema",
        "threads",
        "type"
    ],
    "additionalProperties": false
}